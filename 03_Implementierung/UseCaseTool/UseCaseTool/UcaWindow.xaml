<Controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UseCaseTool"
        xmlns:UseCaseTool="clr-namespace:UseCaseTool" x:Class="UseCaseTool.UcaWindow"
        mc:Ignorable="d"
                Title="Use-Case Visualizer" Height="600" Width="1200" MinHeight="400" MinWidth="650">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="mainColumn1" Width="305"/>
            <ColumnDefinition x:Name="mainColumn2" Width="*"/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="mainFrame" VerticalAlignment="Stretch" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1" Margin="-5,0,-5,-5" BorderBrush="#41B1E1" BorderThickness="1"/>


        <Grid x:Name="GridColumn0" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:Name="openButton" Content="Öffnen" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="130" Click="OpenButtonClick"/>
            <Button x:Name="cancelButton" Content="Abbrechen" HorizontalAlignment="Left" Height="28" Margin="155,10,0,0" VerticalAlignment="Top" Width="130" IsEnabled="False"/>
            <Button x:Name="sidebarHide" Content="-" HorizontalAlignment="Left" Margin="300,-10,-10,-10" VerticalAlignment="Stretch" Width="15" Click="SidebarHideClick" BorderThickness="0" Background="#41B1E1"/>

            <TextBlock x:Name="selectedFile" HorizontalAlignment="Left" Height="28" Margin="10,50,0,0" TextWrapping="Wrap" Text="keine Datei ausgewählt..." VerticalAlignment="Top" Width="275" />
            <GroupBox x:Name="Ablauf" Header="Ablauf" Margin="10,90,20,10" HorizontalAlignment="Left" Width="275" Grid.Row="2">
                <Grid HorizontalAlignment="Left" Height="444" Margin="0,0,-2,-12" VerticalAlignment="Top" Width="270">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </GroupBox>
        </Grid>

        <Grid x:Name="GridColumn1" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:Name="sidebarShow" Content="+" HorizontalAlignment="Left" Margin="0,-10,0,-10" VerticalAlignment="Stretch" Width="15" Click="SidebarShowClick" BorderThickness="0" Visibility="Collapsed" Background="LightGray"/>
            <TabControl x:Name="tabControl" HorizontalAlignment="Stretch" Margin="25,10,10,10" VerticalAlignment="Stretch">

                <TabItem Header="Mängelbericht">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Szenariomatrix">
                    <Grid Background="#FFE5E5E5">
                        <UseCaseTool:MatrixControl/>
                    </Grid>
                </TabItem>
                <TabItem Header="Graph">

                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="70"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="45"/>
                        </Grid.ColumnDefinitions>

                        <UseCaseTool:GraphViewerControl x:Name="GraphView" Grid.ColumnSpan="1" Grid.RowSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        
                        <Button x:Name="zoomAll" HorizontalAlignment="Left" Height="25" Margin="10,380,0,0" VerticalAlignment="Top" Width="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1" Grid.Row="0">
                            <StackPanel>
                                <Image Source="/images/home.png"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="zoomIn" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="1" Grid.Column="1">
                            <StackPanel>
                                <Image Source="/images/plus.png"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="zoomOut" HorizontalAlignment="Left" Height="25" Margin="10,35,0,0" VerticalAlignment="Top" Width="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1" Grid.Row="1">
                            <StackPanel>
                                <Image Source="/images/minus.png"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <DockPanel Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Height="30" LastChildFill="False" VerticalAlignment="Top" >
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Datei">
                    <MenuItem Header="_Datei öffnen..." Click="OpenButtonClick">
                        <MenuItem.Icon>
                            <Image Source="/images/folder_open.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="_Beenden">
                        <MenuItem.Icon>
                            <Image Source="/images/exit.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Bearbeiten">
                    <MenuItem Header="_Bericht exportieren" Click="ExportReportClick">
                        <MenuItem.Icon>
                            <Image Source="/images/export.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Matrix exportieren" Click="ExportMatrixClick">
                        <MenuItem.Icon>
                            <Image Source="/images/export.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Ansicht">
                    <MenuItem Header="_Sprache ändern">
                        <MenuItem.Icon>
                            <Image Source="/images/world.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="_noch andere Menüeinträge?">
                        <MenuItem.Icon>
                            <Image Source="/images/question.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Hilfe">
                    <MenuItem Header="_Über Usecase-Analyser">
                        <MenuItem.Icon>
                            <Image Source="/images/info.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Controls:MetroWindow>
